<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:inputType="none"
            android:padding="10dp"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_clear_step"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:src="@drawable/ic_back_btn_vector" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_back_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_AC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClearClick"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />

            <Button
                android:id="@+id/btn_plus_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onNegativeClick"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />

            <Button
                android:id="@+id/btn_op_modular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperatorClick"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />

            <Button
                android:id="@+id/btn_op_pjestim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperatorClick"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/btn_color"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_op_shumzim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperatorClick"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_op_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperatorClick"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_op_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperatorClick"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_op_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_pik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onClickNumber"
                android:text="."
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_color" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onEqualClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/btn_equal_color" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>